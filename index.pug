        section(id="section__home" class="home section")
            h2(class="home__title title") HOME
            div(class="home__container")
                p(class="home__greetings") Hey, #[br]My name is
                p(class="home__name") Alejandro.
                span(class="home__slogan") "Turning ideas and desing, into code"        
                img(class="home__photo" src="./assets/photos/my_photo.webp" alt="photo of Alejandro Garcia" draggable="false")
